<h2>Aliyun Billing Report</h2>

<table rules="rows">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Environment</th>
      <th>Product</th>
      <th align="right">Payment Amount</th>
      <th>Instance IDs</th>
    </tr>
  </thead>
  <tbody>
  {{#.}}
    <tr>
      <td>
        {{ Customer }}
      </td>
      <td>
        {{ Environment }}
      </td>
      <td>
        {{ ProductCode }}
      </td>
      <td align="right">
        {{ PaymentAmount }}
      </td>
      <td style="font-family: monospace;">
      {{#InstanceIDs}}
        {{.}}<br>
      {{/InstanceIDs}}
      </td>
    </tr>
  {{/.}}
  </tbody>
</table>
